<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="@style/WidgetBackground"
    >
		<TextView
			android:id="@+id/feed_title"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:singleLine="true"
            android:layout_marginTop="16dip"
            android:layout_marginLeft="20dip"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text=""
            android:textSize="16dp"
            android:gravity="center" >
        </TextView>

		<TextView
			android:id="@+id/feed_description"
			android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLines="4"
    		android:ellipsize="marquee"
            android:layout_below="@id/feed_title"
			android:layout_marginLeft="20dip"
			android:layout_marginRight="20dip"
            android:textColor="#FFFFFF"
            android:text=""
            android:textSize="9dp"
            android:gravity="left" >
        </TextView>
        
		<TextView
			android:id="@+id/feed_status"
			android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/feed_description"
			android:layout_marginLeft="20dip"
            android:textStyle="bold"
			android:textColor="#FFFFFF"
            android:text=""
            android:textSize="12dp"
            android:gravity="center" >
        </TextView>
        
		<TextView
			android:id="@+id/feed_data_tag"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:singleLine="true"
			android:layout_below="@id/feed_status"
            android:layout_marginTop="12dip"
            android:layout_marginLeft="20dip"
            android:textStyle="bold"
            android:textColor="#222222"
            android:text=""
            android:textSize="14dp"
            android:gravity="center" >
        </TextView>
		<TextView
			android:id="@+id/feed_data_value"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:singleLine="true"
			android:layout_below="@id/feed_data_tag"
            android:layout_marginTop="6dip"
            android:layout_marginLeft="20dip"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text=""
            android:textSize="28dp"
            android:gravity="center" >
        </TextView>
		<TextView
			android:id="@+id/feed_data_unit"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:singleLine="true"
			android:layout_below="@id/feed_data_value"
            android:layout_marginTop="2dip"
            android:layout_marginLeft="20dip"
            android:textStyle="bold"
            android:textColor="#333333"
            android:text=""
            android:textSize="10dp"
            android:gravity="center" >
        </TextView>
</RelativeLayout>
